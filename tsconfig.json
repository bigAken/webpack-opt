{
  "compilerOptions": {
    "strict": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,

    "noUnusedLocals": false,
    "noUnusedParameters": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "dom", "DOM", "ES2021", "ES2016", "ES2019.Array", "ES6"],
    "sourceMap": true,
    "target": "ESNext",
    "removeComments": true,
    "composite": true,
    "incremental": true,
    "declaration": true,
    "declarationMap": true,
    "skipLibCheck": true,
    "jsx": "react",
    "module": "ES2022",
    "baseUrl": "./",
    "skipDefaultLibCheck": true,
    "noImplicitAny": false,
    "paths": {
      "@/*": ["src/*"],
      "@asset/*": ["src/asset/*"]
    },
    "allowJs": false,
    "alwaysStrict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./",
    "isolatedModules": true,
    "importHelpers": true
  },
  "include": ["src/*", "custom.d.ts"],
  "exclude": ["node_modules", "build"]
}
